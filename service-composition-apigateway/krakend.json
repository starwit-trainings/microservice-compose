{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "router": {
      "disable_gzip": false
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 9080,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/api/design",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/design",
          "encoding": "json",
          "sd": "static",
          "is_collection": true,
          "mapping": {
            "collection": "designs"
          },
          "method": "GET",
          "host": [
            "http://pdf-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/design/{dcId}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/design/{dcId}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://pdf-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/logo-service/info",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/logo-service/info",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://logo-service:8000"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "qos/circuit-breaker": {
                "interval": 60,
                "timeout": 10,
                "max_errors": 1,
                "name": "logo-service-endpoint",
                "log_status_change": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/logo-service2/info",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/logo-service/info",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://logo-service:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
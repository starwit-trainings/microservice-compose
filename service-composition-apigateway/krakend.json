{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "router": {
      "disable_gzip": false
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 9080,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/api/design",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://pdf-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/info",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/info",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://logo-service:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}